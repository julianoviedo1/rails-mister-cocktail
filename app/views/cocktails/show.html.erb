<div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path @cocktail.photo.key, crop: :fit %>')">
  <h1><%=@cocktail.name%></h1>
  <div class="d-flex">
    <%= link_to "Add Dose", new_cocktail_dose_path(@cocktail), class:"btn btn-flat" %>
    <%= link_to 'Return', cocktails_path, class: "btn btn-back " %>
  </div>
</div>
<div class="text-center m-5"> 
  <h2><strong>🍹 Doses 🍹</strong></h2>
</div>
<div class="row justify-content-around m-4">
  <% @cocktail.doses.each do |dose| %>
    <div class="col-md-4 col-sm-12 flash flash-success">
      <h5 class="d-flex justify-content-center"><%= dose.description %> - <%= dose.ingredient.name %></h5>
      <%= link_to '', dose_path(dose), method: :delete, data: { confirm: 'are you sure?' }, class: "fa fa-trash trasher",style:"color: darkred" %>
    </div>
    <%end%>
</div>
