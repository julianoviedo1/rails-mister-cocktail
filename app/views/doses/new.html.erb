<div class="container card m-2 p-2">
  <%= simple_form_for [@cocktail, @dose] do |f| %>
    <%= f.input :description %>
    <%= f.association :ingredient %> 
    <%= f.submit "Submit", class: "btn btn-primary" %>
    <%= link_to 'Return', cocktail_path(@cocktail.id), class: "btn btn-back " %>
  <% end %>
</div>